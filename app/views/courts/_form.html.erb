<%= form_with(model: court, local: true) do |form| %>
<% if court.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(court.errors.count, "error") %> prohibited this court from being saved:</h2>
  <ul>
    <% court.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= form.label :屋内・屋外： %>
  <%= form.select :category_id, Category.all.map{|o| [o.name, o.id]} %>
</div>

<div class="field">
  <%= form.label :コート名： %>
  <%= form.text_field :name, id: :court_name %>
</div>

<div class="field">
  <%= form.label :住所： %>
  <%= form.text_field :address, id: :court_address %>
</div>

<div class="field">
  <%= form.label :備考： %>
  <%= form.text_field :memo, id: :court_memo %>
</div>

<div class="actions button is-info">
  <%= form.submit "決定"%>
</div>

<% end %>